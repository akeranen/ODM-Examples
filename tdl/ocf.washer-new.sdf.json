{
  "info": {
    "title": "OCF washer", 
    "version": "20190530", 
    "copyright": "OCF (TBD)", 
    "license": "OCF (TBD)"
  }, 
  
  "namespace": {
    "ocf": "<TBD ocf namespace uri>"
  },
  "defaultnamespace": "ocf",

  "odmThing": {
    "washer" : {
      "odmObject": {
        "powerswitch": {
          "type": { "$ref": "<library>#/odmObject/oic.r.switch.binary" },
          "optional": false
        },
        "washerstate": {
            "type": { "$ref": "<library>#/odmObject/oic.r.operational.state" },
            "optional": false
        },
        "washermode": {
            "type": { "$ref": "<library>#/odmObject/oic.r.mode" },
            "optional": true
        },
        "watertemperature": {
            "type": { "$ref": "<library>#/odmObject/oic.r.temperature" },
            "optional": true
        }
    }
  }
}